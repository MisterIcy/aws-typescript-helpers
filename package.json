{
    "name": "@mistericy/aws-typescript-helpers",
    "description": "A library of helpers for AWS services written in TypeScript",
    "version": "0.1.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "keywords": [
        "AWS",
        "Helpers",
        "TypeScript"
    ],
    "author": {
        "name": "Alexandros Koutroulis"
    },
    "license": "MIT",
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "none",
        "bracketSpacing": false,
        "bracketSameLine": false,
        "arrowParens": "always",
        "endOfLine": "lf"
    },
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "prettier-format": "prettier 'src/**/*.ts' 'tests/**/*.ts' --write"
    }
}
